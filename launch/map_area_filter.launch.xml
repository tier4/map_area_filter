<launch>

  <node pkg="map_area_filter" exec="map_area_filter" name="ObjectFilter" output="screen">
    <remap from="input/pose_topic" to="/localization/pose_estimator/pose"/>
    <remap from="input/objects" to="/perception/object_recognition/detection/objects"/>
    <remap from="output/objects" to="/perception/object_recognition/objects_tmp"/>

    <param name="map_area_csv" value="/objects_filter_area.csv"/>
    <param name="area_distance_check" value="200"/>
    <param name="filter_type" value="2"/>
  </node>

  <node pkg="map_area_filter" exec="map_area_filter" name="PointcloudFilter" output="screen">
    <remap from="input" to="/perception/obstacle_segmentation/pointcloud"/>
    <remap from="output" to="/pointcloud_filtered"/>
    <remap from="input/pose_topic" to="/localization/pose_estimator/pose"/>
    <remap from="output/objects_cloud" to="/pointcloud_filtered"/>

    <param name="map_area_csv" value="point_cloud_filter_area.csv"/>
    <param name="area_distance_check" value="200"/>
    <param name="filter_type" value="1"/>
  </node>

</launch>
